.school-container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.school-container .search-container{
  width: 100%;
  
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.search-container .search{
  width: 95%;
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  
}

.search .search-input{
  background: #E6E6E6;
  width:85%;
  height: 75rpx;
  font-weight: 200;
  font-size: 30rpx;
  text-align: center;
  border-radius:15rpx 0 0 15rpx;
}

.search-image{
  width: 15%;
  background: #F5F5F5;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-radius: 0 15rpx 15rpx 0;
}

.search-image image{
  width: 40rpx;
  height: 40rpx;
}

.content{
  margin-top: 30rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content .header{
  width: 95%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-weight: 200;
  font-size: 32rpx;
  border-top-style:solid;
  border-width:1rpx;
  border-color: #F0F8FF;
  padding-top: 25rpx;
}

.header .change{
  color: red;
}

.school-list{
  width: 95%;
  display: flex;
  flex-direction: row;
  margin-top: 25rpx;
  flex-wrap:wrap;
}

.school-empty{
  width: 95%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 25rpx;
  flex-wrap:wrap;
}

.school-list .school-item{
  background: #E6E6E6;
  font-weight: 200;
  font-size: 27rpx;
  padding: 8rpx 8rpx;
  border-radius: 10rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}

.school-list .empty{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-word{
  color: darkgray;
  font-size: 30rpx;
  font-weight: 200;
}

.empty-image image{
  width: 150rpx;
  height: 150rpx;
}


